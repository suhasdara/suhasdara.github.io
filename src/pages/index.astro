---
import BaseLayout from '../layouts/BaseLayout.astro';
import Terminal from '../components/Terminal.astro';
---

<BaseLayout title="Suhas Dara - Portfolio">
  <!-- Terminal Hero Section -->
  <section class="py-8 md:py-16">
    <Terminal />
  </section>
  
  <!-- Quick Navigation -->
  <section class="py-8">
    <div class="text-center">
      <h2 class="text-2xl font-bold mb-6 text-green-300 font-mono">
        <span class="text-green-600">#</span> Navigation Menu
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-2xl mx-auto">
        <a href="/projects" class="bg-gray-900 border border-green-600/30 hover:border-green-400/50 hover:bg-green-400/10 rounded-lg p-4 transition-all duration-200 group">
          <div class="text-green-400 text-lg mb-2 font-mono">~/projects</div>
          <div class="text-sm font-mono text-green-300 group-hover:text-green-400">Code & Apps</div>
        </a>
        <a href="/experience" class="bg-gray-900 border border-green-600/30 hover:border-green-400/50 hover:bg-green-400/10 rounded-lg p-4 transition-all duration-200 group">
          <div class="text-green-400 text-lg mb-2 font-mono">~/experience</div>
          <div class="text-sm font-mono text-green-300 group-hover:text-green-400">Work History</div>
        </a>
        <a href="/blogs" class="bg-gray-900 border border-green-600/30 hover:border-green-400/50 hover:bg-green-400/10 rounded-lg p-4 transition-all duration-200 group">
          <div class="text-green-400 text-lg mb-2 font-mono">~/blogs</div>
          <div class="text-sm font-mono text-green-300 group-hover:text-green-400">Tech Writing</div>
        </a>
        <a href="/about" class="bg-gray-900 border border-green-600/30 hover:border-green-400/50 hover:bg-green-400/10 rounded-lg p-4 transition-all duration-200 group">
          <div class="text-green-400 text-lg mb-2 font-mono">~/about</div>
          <div class="text-sm font-mono text-green-300 group-hover:text-green-400">Personal Info</div>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>